<Window x:Class="Simery.AddCaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Simery"
        mc:Ignorable="d" Background="#FDF5DF"
        Title="AddCaseWindow" Height="450" Width="400">

    <Window.Resources>
        
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock  Grid.Row="0" Text="Новое дело" FontSize="26" HorizontalAlignment="Center" />

        <StackPanel Grid.Row="1"  Name ="groupBoxToDo"  Margin="5" Background="#FDF5DF" >
            <StackPanel Margin="5" >
                <TextBlock  FontSize="12" Text="Название:"/>
                <TextBox Name = "titleToDo"  Margin="0, 10" HorizontalScrollBarVisibility="Auto"></TextBox>
                <TextBlock FontSize="12" Text="Выполнить до:"/>
                <DatePicker  Name = "dateToDo"  Margin="0, 10" ></DatePicker>
                <TextBlock FontSize="12" Text="Описание:"/>
                <TextBox  AcceptsTab="True" AcceptsReturn="True"  Name = "descriptionToDo"  Margin="0, 10" MaxLines="10" MinLines="10" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"></TextBox>
            </StackPanel>
        </StackPanel>

        <Button  Grid.Row="2" Name="buttonSave" Click="SaveCase" Content="Сохранить дело" Background="#5EBEC4" Height="30" Width="100" Margin="5"/>
    </Grid>
</Window>
