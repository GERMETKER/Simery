<Window x:Class="Simery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Simery"
        mc:Ignorable="d" Background="#FDF5DF"
        Title="AddCaseWindow" Height="450" Width="400">

    <Window.Resources>
        <local:DataTimeLessDateConverter x:Key="LessDayConverter"/>
        <local:DataTimeEqualsDateConverter x:Key="EqualsDayConverter"/>
        <local:DataTimeBiggerDateConverter x:Key="BiggerDayConverter"/>

        <Style TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="HeadersVisibility" Value="None"/>
            <Setter Property="RowBackground" Value="White"></Setter>
            <Setter Property="AlternatingRowBackground" Value="#FFFDFAF1"></Setter>
            <Setter Property="GridLinesVisibility" Value="Horizontal"></Setter>
            <Setter Property="HorizontalGridLinesBrush" Value="#5EBEC4"></Setter>
            <Setter Property="BorderThickness" Value="1.5"></Setter>
        </Style>
        
        <Style x:Key="HeaderStyle">
            <Setter Property="ItemsControl.FontSize" Value="26"></Setter>
            <Setter Property="ItemsControl.Margin" Value="5"></Setter>
            <Setter Property="ItemsControl.Foreground" Value="#5EBEC4"></Setter>
            <Setter Property="ItemsControl.FontWeight" Value="Bold"></Setter>
            <Setter Property="ItemsControl.FontFamily" Value="Cascadia Mono"></Setter>
        </Style>

        <Style TargetType="TextBlock" x:Key="CrossLine">
            <Style.Triggers>
                <DataTrigger Binding="{Binding ElementName=Comp, Path=IsChecked}" Value="True">
                    <Setter Property="TextDecorations" Value="Strikethrough"></Setter>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBlock">
            <Style.Triggers>
                <Trigger Property="Control.IsFocused" Value="True">
                    <Setter Property="ItemsControl.Background" Value="#FFFFFAD6" ></Setter>
                    <Setter Property="ItemsControl.BorderThickness" Value="2"></Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="Berr">
            <Style.Triggers>
                <Trigger Property="Control.IsFocused" Value="True">
                    <Setter Property="ItemsControl.FontWeight" Value="Bold"></Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBlock" x:Key="ColorR">
           
            <Style.Triggers>
                
                <DataTrigger Binding="{Binding Path=TimeOfCompleating, Converter={StaticResource LessDayConverter}}" Value="True">
                    <Setter Property="Foreground" Value="Red"></Setter>
                </DataTrigger>
                <DataTrigger Binding="{Binding Path=TimeOfCompleating, Converter={StaticResource LessDayConverter}}" Value="False">
                    <Setter Property="Foreground" Value="Green"></Setter>
                </DataTrigger>
                <DataTrigger Binding="{Binding Path=TimeOfCompleating, Converter={StaticResource EqualsDayConverter}}" Value="True">
                    <Setter Property="Foreground" Value="Yellow"></Setter>
                </DataTrigger>
                <DataTrigger Binding="{Binding Path=TimeOfCompleating, Converter={StaticResource BiggerDayConverter}}" Value="True">
                    <Setter Property="Foreground" Value="Orange"></Setter>
                </DataTrigger>



            </Style.Triggers>
        </Style>
        
    </Window.Resources>






    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition ></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>



        <TextBlock Style="{StaticResource HeaderStyle}" Grid.Row="0" Grid.Column="0" Text="Список дел" FontSize="26" HorizontalAlignment="Left" />

        <Button  Grid.Column="1" Grid.Row="0"  Name="buttonSave" Click="SaveInCase" Background="#5EBEC4" Height="30" Width="60" Margin="5,5,0,5">
            <Image Source="Images/save.png" Height="25"></Image>
        </Button>

        <Button  Grid.Column="2" Grid.Row="0"  Name="buttonAdd" Click="AddCase" Background="#5EBEC4" Height="30" Width="60" Margin="5,5,5,5">
            <Image Source="Images/Плюс.png" Height="25"></Image>
        </Button>

        <ListBox ItemContainerStyle="{StaticResource Berr}" HorizontalContentAlignment = "Stretch" x:Name="ListBoxToDo" Background="#FDF5DF" Grid.ColumnSpan="3" Grid.Row="1" Grid.Column="0" Margin="5" Width="Auto">
            <ListBox.ItemTemplate >
                <DataTemplate >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                            
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition ></ColumnDefinition>
                            <ColumnDefinition ></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <CheckBox x:Name="Comp"  Margin="2, 0, 2, 0" Grid.Row="0" Grid.Column="0"  Checked="CasesPlus" Unchecked="CasesMin" IsThreeState="False" IsChecked="{Binding Path=IsCompleted}"></CheckBox>

                        <TextBlock Margin="2, 0, 2, 0" Grid.Row="0" Grid.Column="1" FontSize="14" Style="{StaticResource CrossLine}"  Text="{Binding Path=CaseName}"/>

                        <TextBlock Margin="2, 0, 2, 0" Grid.Row="0" Grid.Column="2"
                                   HorizontalAlignment="Right" FontSize="14"
                                   Style="{StaticResource ColorR}" Text="{Binding Path=TimeOfCompleating, StringFormat=dd.MM.yyyy}">
                            
                        </TextBlock>

                        <Button Grid.Column="3" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Right" Name="buttonDel" Click="DelCase"  Background="#5EBEC4" Height="20" Width="20" Margin="2">
                            <Image Source="Images/Крестик.jpg" Height="18"></Image>
                        </Button>

                        <TextBlock  Margin="2, 0, 2, 0" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4"  FontSize="12" Text="{Binding Path=Description}"></TextBlock>


                    </Grid>
                    
                </DataTemplate>
            </ListBox.ItemTemplate>
            
        </ListBox>

        <ProgressBar Foreground="#5EBEC4" x:Name="CasesProgress" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Width="Auto" Height="20" Margin="5">
            
        </ProgressBar>
        <TextBlock Margin="5" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Run Name="Val"></Run>
            <Run>/</Run>
            <Run Name="Max"></Run>
        </TextBlock>
    </Grid>
</Window>
