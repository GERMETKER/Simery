<Window x:Class="Simery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Simery"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FFFDFAF1">

    
     

    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Список дел" FontSize="26" HorizontalAlignment="Center" />
        
        <ScrollViewer Grid.Row="1" Grid.Column="0" Margin="5" Background="#FDF5DF" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <ListBox  Margin="5" Name ="ListToDo" IsSynchronizedWithCurrentItem="True"  Background="#FDF5DF" ItemsSource="{Binding CasesList}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Path = CaseName}"/>
                            <TextBlock Text="{Binding Path = TimeOfCompleating}" />
                            <TextBlock Text="{Binding Path = Description}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                
                
                


            </ListBox>
        </ScrollViewer>

        <CheckBox Grid.Column="1" Grid.Row="0" Content="Добавление новых дел" VerticalAlignment="Bottom" Name="Box" Checked="Box_Checked" Unchecked="Box_Unchecked"/>


        <ScrollViewer Visibility="Hidden" Name ="groupBoxToDo" Grid.Column="1" Grid.Row="1" Margin="5" Background="#FDF5DF" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="5" >
                <TextBlock FontSize="12" Text="Название:" />
                <TextBox Name = "titleToDo"  Margin="0, 10"></TextBox>
                <TextBlock FontSize="12" Text="Выполнить до:"/>
                <DatePicker Name = "dateToDo"  Margin="0, 10" ></DatePicker>
                <TextBlock FontSize="12" Text="Описание:"/>
                <TextBox Name = "descriptionToDo"  Margin="0, 10" MaxLines="10" MinLines="10" ></TextBox>
            </StackPanel>
        </ScrollViewer>

        <Button Grid.Column="0" Grid.Row="2" Name="buttonDel" Click="DelCase" Content="Удалить дела" Background="#5EBEC4" Height="30" Width="100" Margin="5"/>
        <Button Grid.Column="1" Grid.Row="2" Name="buttonAdd" Content="Добавить дело" Click="AddCase" Background="#5EBEC4" Height="30" Width="100" Margin="5"/>
    </Grid>
</Window>
